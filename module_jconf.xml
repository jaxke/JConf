<?xml version="1.0" encoding="UTF-8"?>
<project name="module_jconf" default="compile.module.jconf">
  <dirname property="module.jconf.basedir" file="${ant.file.module_jconf}"/>
  
  <property name="module.jdk.home.jconf" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.jconf" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.jconf" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.jconf" value="-encoding UTF-8 -source 8 -target 8 ${compiler.args}"/>
  
  <property name="jconf.output.dir" value="${module.jconf.basedir}/out/production/Jconf"/>
  <property name="jconf.testoutput.dir" value="${module.jconf.basedir}/out/test/Jconf"/>
  
  <path id="jconf.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="jconf.module.production.classpath">
    <path refid="${module.jdk.classpath.jconf}"/>
  </path>
  
  <path id="jconf.runtime.production.module.classpath">
    <pathelement location="${jconf.output.dir}"/>
  </path>
  
  <path id="jconf.module.classpath">
    <path refid="${module.jdk.classpath.jconf}"/>
    <pathelement location="${jconf.output.dir}"/>
  </path>
  
  <path id="jconf.runtime.module.classpath">
    <pathelement location="${jconf.testoutput.dir}"/>
    <pathelement location="${jconf.output.dir}"/>
  </path>
  
  
  <patternset id="excluded.from.module.jconf">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.jconf">
    <patternset refid="excluded.from.module.jconf"/>
  </patternset>
  
  <path id="jconf.module.sourcepath">
    <dirset dir="${module.jconf.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.jconf" depends="compile.module.jconf.production,compile.module.jconf.tests" description="Compile module Jconf"/>
  
  <target name="compile.module.jconf.production" depends="register.custom.compilers" description="Compile module Jconf; production classes">
    <mkdir dir="${jconf.output.dir}"/>
    <javac2 destdir="${jconf.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.jconf}/javac">
      <compilerarg line="${compiler.args.jconf}"/>
      <bootclasspath refid="jconf.module.bootclasspath"/>
      <classpath refid="jconf.module.production.classpath"/>
      <src refid="jconf.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.jconf"/>
    </javac2>
    
    <copy todir="${jconf.output.dir}">
      <fileset dir="${module.jconf.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.jconf.tests" depends="register.custom.compilers,compile.module.jconf.production" description="compile module Jconf; test classes" unless="skip.tests"/>
  
  <target name="clean.module.jconf" description="cleanup module">
    <delete dir="${jconf.output.dir}"/>
    <delete dir="${jconf.testoutput.dir}"/>
  </target>
</project>